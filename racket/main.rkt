#lang racket

(define (main grid)
  (print-grid grid)
  (sleep 0.1)
  (main (step-grid grid)))

;; Print a grid to the terminal
(define (print-grid grid)
  (printf "\033[H\033[2J~a" (format-grid grid)))

;; Format a grid for printing to the terminal
(define (format-grid grid)
  (string-join (map format-grid-line grid) "\n"))

;; Format a line for printing to the terminal
(define (format-grid-line line)
  (string-join (map format-grid-cell line) ""))

;; Format a cell for printing to the terminal
(define (format-grid-cell cell)
  (case cell
    [(1) '"██"]
    [(0) '"  "]))

;; Step a grid forward by one tick
(define (step-grid grid)
  (map (curry step-grid-line grid) grid (range (length grid))))

;; Step a line forward by one tick
(define (step-grid-line grid line y)
  (map (curry step-grid-cell grid y) line (range (length line))))

;; Step a cell forward by one tick
(define (step-grid-cell grid y cell x)
  (case cell
    [(1) (step-live-grid-cell cell (count-live-neighbours grid y x))]
    [(0) (step-dead-grid-cell cell (count-live-neighbours grid y x))]))

;; Calculate the next state for a live cell
(define (step-live-grid-cell cell live-neighbours)
  (case live-neighbours
    [(2 3) 1]
    [else 0 ]))

;; Calculate the next state for a dead cell
(define (step-dead-grid-cell cell live-neighbours)
  (case live-neighbours
    [(3)  1]
    [else 0]))

;; Count the number of live neighbours a cell has at the given coords
(define (count-live-neighbours grid y x)
  (for*/sum ([dy (in-range (max 0 (- y 1)) (min (length grid) (+ y 2)))]
             [dx (in-range (max 0 (- x 1)) (min (length (list-ref grid y)) (+ x 2)))]
             #:unless (and (equal? dy y) (equal? dx x)))
            (list-ref (list-ref grid dy) dx)))

